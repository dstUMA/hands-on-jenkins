#!/usr/bin/groovy

pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    stages {

        stage("Build") {
            steps {
                buildApp()
            }
        }

        stage("Deploy - Dev") {
            steps {
                deploy('dev')
            }
        }
    }
}

// steps
def buildApp() {
    dir('section_4/code/cd_pipeline') {
        docker.build("hands-on-jenkins/myapp:${BUILD_NUMBER}")
    }
}

def deploy(environment) {

    def containerName = ''
    def port = ''

    if (environment == 'dev') {
        containerName = 'app_dev'
        port = '8888'
    } else {
        error "Environment not valid"
    }

    // Stop container if running
    bat """
    docker stop ${containerName} >NUL 2>&1 || exit 0
    """

    // Remove container if exists
    bat """
    docker rm ${containerName} >NUL 2>&1 || exit 0
    """

    // Run container
    bat """
    docker run -d -p ${port}:5000 --name ${containerName} hands-on-jenkins/myapp:${BUILD_NUMBER}
    """
}
